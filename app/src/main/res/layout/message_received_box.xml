<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvReceiveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="瑋瑋"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvReceiveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvReceivedMessageParent"
        android:layout_toEndOf="@+id/tvReceivedMessageParent"
        android:text="2022-03-02 18:00" />

    <RelativeLayout
        android:id="@+id/tvReceivedMessageParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReceiveName"
        android:layout_marginLeft="5dp"
        android:background="@drawable/received_message_background">

        <TextView
            android:id="@+id/tvReceivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:maxLines="10"
            android:padding="10dp"
            android:text="This is received message"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>