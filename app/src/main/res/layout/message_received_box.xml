<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/profilePictureGroupInReceiveBox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="250dp">


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/iv_myProfilePictureInReceiveBox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_user_image" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvReceiveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvReceivedMessageParent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/profilePictureGroupInReceiveBox"
        android:gravity="center"
        android:text="瑋瑋"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvReceiveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvReceivedMessageParent"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/tvReceivedMessageParent"
        android:text="2022-03-02 18:00" />

    <RelativeLayout
        android:id="@+id/tvReceivedMessageParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePictureGroupInReceiveBox"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/received_message_background1">

        <ImageView
            android:id="@+id/ivReceivedImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:padding="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_event_play"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvReceivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:maxWidth="250dp"
            android:maxLines="10"
            android:padding="10dp"
            android:text="This is received message"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/received_audio_progress_view"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/bg_audio_play_progress"
                android:visibility="gone" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/received_play_voice_animation"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_fileName="audio_play_animation.json"
                app:lottie_loop="true" />

        </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/received_link_preview_recyclerview"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReceivedMessageParent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:visibility="gone" />

</RelativeLayout>