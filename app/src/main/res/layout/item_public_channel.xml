<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/tvChannelName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="哈哈群組"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMemberAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10位成員"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/tvChannelName"
        app:layout_constraintTop_toBottomOf="@+id/tvChannelName" />

    <Button
        android:id="@+id/btn_joinChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入！"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvChannelName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>